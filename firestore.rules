rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
  	// Admins collection
    match /admins/{adminId} {
    	allow read, write: if request.auth != null && request.auth.token.is_superadmin == true;
    }
    
    match /{collection}/{docId} {
      allow read: if collection in ['MG001_messages', 'MG002_rules', 'MG003_emails'];
      allow write: if request.auth != null && collection in ['MG001_messages', 'MG002_rules', 'MG003_emails'];
    }
    
    match /{document=**} {
      allow read, write: if true;
    }
  }
}